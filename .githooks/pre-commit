#! /usr/bin/env sh
# Pre-commit hook to format staged Go files

# Get all staged Go files
STAGED_GO_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.go$')

if [ -z "$STAGED_GO_FILES" ]; then
    # No Go files staged, nothing to do
    exit 0
fi

# Check if gofmt is available
if ! command -v gofmt > /dev/null 2>&1; then
    echo "Error: gofmt is not installed or not in PATH"
    exit 1
fi

# Format each staged Go file
echo "Formatting staged Go files..."
for FILE in $STAGED_GO_FILES; do
    # Format the file
    gofmt -w "$FILE"

    # Re-add the file to staging to include formatting changes
    git add "$FILE"
done

echo "Go files formatted successfully"
exit 0
